<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BFd3d3d3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="@color/ColorHeadColor"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="管理"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_appbar_text" />


        <Button
            android:id="@+id/btn_zhuxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:layout_marginLeft="@dimen/dimen16"
            android:textSize="@dimen/text_appbar_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>
        <TextView
            android:id="@+id/tv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无图"
            android:textColor="@color/ColorText_Icons"
            android:textSize="@dimen/text_subtitle" />

        <com.suke.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen16" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="@dimen/dimen4"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/dimen64"
            android:layout_height="28dp"
            android:background="@drawable/button_submit"
            android:layout_marginRight="@dimen/dimen8"
            android:id="@+id/btn_admin_email"
            android:textSize="@dimen/text_button_text"
            android:textColor="@color/ColorLightPrimaryColor"
            android:text="设置邮箱"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen8"
            android:layout_weight="1"
            android:text="待处理单号"
            android:textColor="@color/ColorPrimaryText"
            android:textSize="@dimen/text_subtitle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_admin_list_background">

        <medusa.theone.waterdroplistview.view.WaterDropListView
            android:id="@+id/lv_admin_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </medusa.theone.waterdroplistview.view.WaterDropListView>


    </LinearLayout>



</LinearLayout>