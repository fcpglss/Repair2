<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen4"
        android:layout_marginTop="@dimen/dimen4"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen32">

            <TextView
                android:id="@+id/tv_admin_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-4-5"
                android:textColor="@color/ColorPrimaryText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen4">

                    <ImageView
                        android:layout_width="@dimen/dimen24"
                        android:layout_height="@dimen/dimen24"
                        android:src="@drawable/record_icon_repair" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen8"
                        android:layout_marginRight="@dimen/dimen16"
                        android:text="故障信息"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_subtitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen32"
                    android:paddingBottom="@dimen/dimen4">

                    <TextView
                        android:id="@+id/tv_admin_item_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电"
                        android:textColor="@color/ColorSecondaryText"
                        android:textSize="@dimen/text_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen32"
                    android:paddingBottom="@dimen/dimen4">

                    <TextView
                        android:id="@+id/tv_admin_item_address"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宿舍楼西四栋第一层110"

                        android:textColor="@color/ColorSecondaryText"
                        android:textSize="@dimen/text_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen32"
                    android:paddingBottom="@dimen/dimen4">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="滴水不止，水龙头关不上"
                        android:textColor="@color/ColorSecondaryText"
                        android:textSize="@dimen/text_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen4">

                    <ImageView
                        android:layout_width="@dimen/dimen24"
                        android:layout_height="@dimen/dimen24"
                        android:layout_gravity="left"
                        android:src="@drawable/ren" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen8"
                        android:layout_marginRight="@dimen/dimen16"
                        android:text="报修人信息"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_subtitle" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen32"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen4">

                    <TextView
                        android:id="@+id/tv_admin_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/ColorSecondaryText"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen32"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen4">

                    <TextView
                        android:id="@+id/tv_admin_item_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/ColorSecondaryText"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen8">

                <ImageView
                    android:id="@+id/img_admin_pic"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>