<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#ffffff"
       android:visibility="gone"
       android:id="@+id/ll_big_img">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/iv_big_img"
           />
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修列表"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="报修人" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入真实姓名"
                        android:textColor="#BF383838"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="电话号码" />

                    <EditText
                        android:id="@+id/et_tel"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入电话号码"
                        android:textColor="#BF383838"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="电子邮箱" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入电子邮箱"
                        android:textColor="#BF383838"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="报修密码" />

                    <EditText
                        android:id="@+id/et_apply_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入4位报修密码"
                        android:textColor="#BF383838"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="报修区域" />

                        <EditText
                            android:id="@+id/et_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="选择报修区域"
                            android:textColor="#BF383838"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="楼号" />

                        <EditText
                            android:id="@+id/et_detail_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="选择报修楼号"
                            android:textColor="#BF383838"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="报修层号" />

                        <EditText
                            android:id="@+id/et_floor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="选择层号"
                            android:textColor="#BF383838"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="房间" />

                        <EditText
                            android:id="@+id/et_room"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="选择房间号"
                            android:textColor="#BF383838"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="详细地址" />

                    <EditText
                        android:id="@+id/et_apply_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入详细地址"
                        android:textColor="#BF383838"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="报修类型" />

                        <EditText
                            android:id="@+id/et_apply_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="选择报修类型"
                            android:textColor="#BF383838"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_apply_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请描述需维修的具体物品情况"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:textColor="#BF383838"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_img1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="3dp"
                            android:padding="8dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/x"
                            android:id="@+id/iv_img_x1"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_img2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="3dp"
                            android:scaleType="fitXY"
                            android:padding="8dp"
                            android:src="@mipmap/ic_launcher" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/x"
                            android:id="@+id/iv_img_x2"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/iv_img3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="3dp"
                            android:scaleType="fitXY"
                            android:padding="8dp"
                            android:src="@mipmap/ic_launcher" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/x"
                            android:id="@+id/iv_img_x3"
                            />
                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/add_picture3" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="#6699ff"
                    android:gravity="center"
                    android:text="立即报修"
                    android:textColor="#ffffff"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="#6699ff"
                    android:gravity="center"
                    android:text="清空"
                    android:textColor="#ffffff"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>