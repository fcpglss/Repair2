<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_detail_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:orientation="vertical">

    <com.bm.library.PhotoView
        android:id="@+id/iv_show_big_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="@color/ColorHeadColor"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="详细信息"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_appbar_text" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen8">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报修人信息"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_subtitle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_marginRight="@dimen/dimen8"
                    android:background="@color/ColorDividerColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen8"
                android:background="@color/ColorDividerColor" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen8"
                android:paddingRight="@dimen/dimen8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_details_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:gravity="right"
                            android:textSize="@dimen/text_button_text" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/ColorText_Icons"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障信息"
                    android:textColor="@color/ColorPrimaryText"
                    android:textSize="@dimen/text_subtitle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen8"
                android:background="@color/ColorDividerColor" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="报修时间"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_details_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:gravity="right"

                            android:textSize="@dimen/text_button_text" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="16dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_left"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="故障地点"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <me.codeboy.android.aligntextview.AlignTextView
                            android:id="@+id/tv_details_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="90dp"
                            android:layout_toLeftOf="@id/iv_icon"
                            android:lineSpacingExtra="4dp"
                            android:maxLines="5"
                            android:text=""
                            android:textSize="@dimen/text_button_text" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_class_icon"
                            android:layout_width="16dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_class_left"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="故障"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <me.codeboy.android.aligntextview.AlignTextView
                            android:id="@+id/tv_details_describe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="90dp"
                            android:layout_toLeftOf="@id/iv_class_icon"
                            android:lineSpacingExtra="4dp"
                            android:maxLines="5"
                            android:text=""
                            android:textSize="@dimen/text_button_text" />

                    </RelativeLayout>


                </LinearLayout>


                <!--图片的GridView-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <GridView
                        android:id="@+id/gv_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="5dp"
                        android:numColumns="3"
                        android:verticalSpacing="5dp"></GridView>
                </LinearLayout>


                <!--维修进度-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/ColorText_Icons"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修进度"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_subtitle" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen8"
                    android:paddingRight="@dimen/dimen8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="维修状态"
                                android:textColor="@color/ColorPrimaryText"
                                android:textSize="@dimen/text_button_text" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </LinearLayout>


                            <ImageView
                                android:id="@+id/img_status"
                                android:layout_width="@dimen/dimen32"
                                android:layout_height="@dimen/dimen24" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="处理时间"
                                android:textColor="@color/ColorPrimaryText"
                                android:textSize="@dimen/text_button_text" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_details_deal_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:gravity="right"
                                android:textSize="@dimen/text_button_text" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--维修组长-->
                <LinearLayout
                    android:id="@+id/ll_thirdMan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="维修组长"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_thirdMan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:gravity="right"
                            android:textSize="@dimen/text_button_text" />

                    </LinearLayout>


                </LinearLayout>

                <!--完成时间-->
                <LinearLayout
                    android:id="@+id/ll_finish_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="完成时间"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_details_finish_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:gravity="right"
                            android:textSize="@dimen/text_button_text" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="维修人员"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/iv_employee_arr"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/show_arr"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/tv_paigong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:gravity="right"
                            android:text="未派工"
                            android:textSize="@dimen/text_button_text"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <!--//隐藏的人员信息布局-->

                <LinearLayout
                    android:id="@+id/ll_employee_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="姓名" />

                        <TextView
                            android:id="@+id/tv_details_employee1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="联系方式" />

                        <TextView
                            android:id="@+id/tv_details_employee_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="维修类型" />

                        <TextView
                            android:id="@+id/tv_details_employee_can"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_detail_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_detail_compensation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="是否收费"
                                android:textColor="@color/ColorPrimaryText"
                                android:textSize="@dimen/text_button_text" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_details_compensation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:gravity="right"
                                android:textSize="@dimen/text_button_text" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_detail_nedd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="所需材料"
                                android:textColor="@color/ColorPrimaryText"
                                android:textSize="@dimen/text_button_text" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_details_need"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:gravity="right"

                                android:textSize="@dimen/text_button_text" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_detail_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="处理人"
                                android:textColor="@color/ColorPrimaryText"
                                android:textSize="@dimen/text_button_text" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_details_admin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:gravity="right"

                                android:textSize="@dimen/text_button_text" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <!--维修速度-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="维修速度"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>

                        <ImageView
                            android:id="@+id/iv_speed_star1"
                            android:layout_width="19dp"
                            android:layout_height="20dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_speed_star2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_speed_star3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_speed_star4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_speed_star5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/star" />

                    </LinearLayout>


                </LinearLayout>
                <!--维修质量-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="维修质量"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>

                        <ImageView
                            android:id="@+id/iv_quality_star1"
                            android:layout_width="19dp"
                            android:layout_height="20dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_quality_star2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_quality_star3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_quality_star4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/iv_quality_star5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/star" />

                    </LinearLayout>


                </LinearLayout>
                <!--维修态度-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="维修态度"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>

                        <ImageView
                            android:id="@+id/iv_attitude_star1"
                            android:layout_width="19dp"
                            android:layout_height="20dp"
                            android:src="@drawable/star" />

