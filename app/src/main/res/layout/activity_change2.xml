<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_change_big_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_change_big_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="@color/ColorHeadColor"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="修改"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_appbar_text" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_change_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="@dimen/dimen72"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="*姓名"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_button_text" />

                    <EditText
                        android:id="@+id/et_change_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入真实姓名"
                        android:maxLength="10"
                        android:textColor="@color/ColorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_small_word_hints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_marginRight="@dimen/dimen8"
                    android:background="@color/ColorDividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="@dimen/dimen72"
                        android:layout_height="wrap_content"
                        android:text="*联系电话"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_button_text" />

                    <EditText
                        android:id="@+id/et_change_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="请输入电话号码"
                        android:maxLength="10"
                        android:textColor="@color/ColorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_small_word_hints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_marginRight="@dimen/dimen8"
                    android:background="@color/ColorDividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="@dimen/dimen72"
                        android:layout_height="wrap_content"
                        android:text="电子邮箱"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_button_text" />

                    <EditText
                        android:id="@+id/et_change_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入电子邮箱"
                        android:maxLength="30"
                        android:textColor="@color/ColorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_small_word_hints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_marginRight="@dimen/dimen8"
                    android:background="@color/ColorDividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/t4"

                        android:layout_width="@dimen/dimen72"
                        android:layout_height="wrap_content"
                        android:text="*报修密码"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_button_text" />

                    <EditText
                        android:id="@+id/et_change_apply_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入4位报修密码"
                        android:password="true"
                        android:textColor="@color/ColorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_small_word_hints" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dimen72"
                            android:layout_height="wrap_content"
                            android:text="*故障地点"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <EditText
                            android:id="@+id/et_change_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="选择地点类型"
                            android:textColor="@color/ColorSecondaryText"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_small_word_hints" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_change_detail_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="@dimen/dimen40"
                            android:layout_height="wrap_content"
                            android:text="楼号"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <EditText
                            android:id="@+id/et_change_detail_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="选择报修楼号"
                            android:textColor="@color/ColorSecondaryText"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_small_word_hints" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_marginRight="@dimen/dimen8"
                    android:background="@color/ColorDividerColor" />

                <LinearLayout
                    android:id="@+id/ll_change_contain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_change_floor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="@dimen/dimen72"
                            android:layout_height="wrap_content"
                            android:text="楼层"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <EditText
                            android:id="@+id/et_change_floor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="选择楼层"
                            android:textColor="@color/ColorSecondaryText"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_small_word_hints" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_change_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="@dimen/dimen40"
                            android:layout_height="wrap_content"
                            android:text="房间"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <EditText
                            android:id="@+id/et_change_room"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="选择房间号"
                            android:textColor="@color/ColorSecondaryText"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_small_word_hints" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_marginRight="@dimen/dimen8"
                    android:background="@color/ColorDividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="故障地点描述"
                        android:textColor="@color/ColorPrimaryText"
                        android:textSize="@dimen/text_button_text" />

                    <EditText
                        android:id="@+id/et_change_apply_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="输入故障地点"
                        android:maxLength="25"
                        android:textColor="@color/ColorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_small_word_hints" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_marginRight="@dimen/dimen8"
                    android:background="@color/ColorDividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="@dimen/dimen72"
                            android:layout_height="wrap_content"
                            android:text="*故障"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <EditText
                            android:id="@+id/et_change_apply_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="选择故障类型"
                            android:textColor="@color/ColorSecondaryText"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_small_word_hints" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_change_detail_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="@dimen/dimen40"
                            android:layout_height="wrap_content"
                            android:text="类详"
                            android:textColor="@color/ColorPrimaryText"
                            android:textSize="@dimen/text_button_text" />

                        <EditText
                            android:id="@+id/et_change_apply_detail_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="选择报修类型"
                            android:textColor="@color/ColorSecondaryText"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_small_word_hints" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_change_apply_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请描述需维修的具体物品情况"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:maxLength="50"
                    android:textColor="#BF383838"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_change_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_change_img1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="3dp"
                            android:padding="8dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />

                        <ImageView
                            android:id="@+id/iv_change_img_x1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/x" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_change_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_change_img2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="3dp"
                            android:padding="8dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />

                        <ImageView
                            android:id="@+id/iv_change_img_x2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/x" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_change_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/iv_change_img3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="3dp"
                            android:padding="8dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />

                        <ImageView
                            android:id="@+id/iv_change_img_x3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/x" />
                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/iv_change_add"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/add_picture3" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_change_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_submit"
                    android:gravity="center"
                    android:text="修改"
                    android:textColor="#ffffff"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn_change_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_submit"
                    android:gravity="center"
                    android:text="清空"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>