<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017-03-01 07:21"
            android:id="@+id/tv_my_time"
            android:textSize="12sp"
            android:textColor="#838383"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:id="@+id/iv_my_state"
            android:text="处理中" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/iv_my_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="报修人"
                    android:textColor="#838383"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄世鹏"
                    android:textColor="#838383" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="报修区域"
                        android:textColor="#838383"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_my_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西4栋218"
                        android:textColor="#838383" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff9900">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="评价"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_my_to_appraise"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="报修类型"
                        android:textColor="#838383"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_my_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:text="水"
                        android:textColor="#838383" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff9900">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="修改"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_my_to_change"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>